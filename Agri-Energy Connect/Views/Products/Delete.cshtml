@model DataContextAndModels.DataTransferObjects.ProductDto

@{
    ViewData["Title"] = "Confirm Product Deletion";
}

<div class="container mt-4">

    @* Success Message *@
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Error Message *@
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow rounded-3 border-danger">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
            <h4 class="mb-0">Confirm Product Deletion</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold mb-4">Are you sure you want to permanently delete this product?</p>

            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <input asp-for="CategoryName" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Farmer</label>
                <input asp-for="FarmerName" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Production Date</label>
                <input class="form-control" value="@Model.ProductionDate.ToString("dd MMMM yyyy")" readonly />
            </div>

        </div>
        <div class="card-footer d-flex justify-content-between gap-2">
            
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>

            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>
    </div>
</div>

@* Modal Component *@
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-circle me-2"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you absolutely sure you want to delete <strong>@Model.Name</strong>? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-circle"></i> Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: Automatically focus modal when shown
        const deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('shown.bs.modal', () => {
            deleteModal.querySelector('button[type="submit"]').focus();
        });
    </script>
}
