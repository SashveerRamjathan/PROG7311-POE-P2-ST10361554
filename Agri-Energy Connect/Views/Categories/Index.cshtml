@model List<DataContextAndModels.DataTransferObjects.CategoryDto>

@{
    ViewData["Title"] = "Product Categories";
}

<div class="container mt-4">

    <h2 class="mb-4">Manage Product Categories</h2>

    @* Success Message *@
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Error Message *@
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4 d-flex justify-content-start">
        <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No categories available.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var category in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@category.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-0">Manage products under this category.</p>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-between gap-2">
                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-controller="Products" asp-action="ByCategory" asp-route-categoryId="@category.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-boxes"></i> View Products
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
