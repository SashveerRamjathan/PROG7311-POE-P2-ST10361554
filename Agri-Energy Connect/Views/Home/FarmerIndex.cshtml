@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container py-5">
    <div class="mb-4 text-center">
        <h2 class="fw-bold text-success">
            <i class="bi bi-tree-fill me-2"></i>Welcome to Agri-Energy Connect, Farmer!
        </h2>
        <p class="lead text-muted">Manage your sustainable agricultural products and connect with green energy solutions.</p>
    </div>

    <div class="row g-4">
        <!-- Add New Product -->
        <div class="col-md-6">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <h5 class="card-title mb-0 text-success">Add New Product</h5>
                    </div>
                    <p class="card-text text-muted">Easily list your agricultural products and connect with green energy providers.</p>
                    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-success w-100">
                        <i class="bi bi-plus-circle"></i> Add Product
                    </a>
                </div>
            </div>
        </div>

        <!-- My Product Listings -->
        <div class="col-md-6">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-list-ul fs-5"></i>
                        </div>
                        <h5 class="card-title mb-0 text-primary">My Product Listings</h5>
                    </div>
                    <p class="card-text text-muted">View, update or delete your current products and track their performance.</p>
                    <a asp-controller="Products" asp-action="FarmerProductsIndex" class="btn btn-outline-primary w-100">
                        <i class="bi bi-eye"></i> View Listings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Advanced Filtering -->
    <div class="row g-4 mt-3">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-funnel-fill fs-5"></i>
                        </div>
                        <h5 class="card-title mb-0 text-warning">Advanced Filtering</h5>
                    </div>
                    <p class="card-text text-muted">Filter your products by category, production date, or sort them alphabetically and by date range to quickly find what you need.</p>
                    <a asp-controller="Products" asp-action="FarmerProductsIndex" class="btn btn-warning text-white w-100">
                        <i class="bi bi-funnel"></i> Explore Filters
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
